        <!--<aop:pointcut id="transactionPointcut" expression="execution(* com.bocsoft.library.service.*Impl.*(..))" />-->
        <!--<aop:advisor pointcut-ref="transactionPointcut" advice-ref="transactionAdvice"/>-->
    <!--</aop:config>-->
</beans>

